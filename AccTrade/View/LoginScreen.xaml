<Window x:Class="AccTrade.View.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccTrade.View"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" >
    <Grid>
        <Label Content="Sign In" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="36" FontWeight="Bold"/>
        <Button x:Name="loginbtn" Content="Sign In" HorizontalAlignment="Center" Margin="0,189,0,0" VerticalAlignment="Top" Height="27" Width="85"/>
        <Button x:Name="regbtn" Content="Sign Up" HorizontalAlignment="Center" Margin="0,221,0,0" VerticalAlignment="Top" Height="27" Width="84" Click="regbtn_Click"/>
        <TextBox x:Name="logtb" HorizontalAlignment="Center" Margin="0,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="165"/>
        <PasswordBox x:Name="passtb" HorizontalAlignment="Center" Margin="0,144,0,0" VerticalAlignment="Top" Width="165"/>
        <Label Content="Login:" HorizontalAlignment="Left" Margin="57,81,0,0" VerticalAlignment="Top"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="57,122,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
