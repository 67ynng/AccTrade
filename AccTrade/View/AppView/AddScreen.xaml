<Page x:Class="AccTrade.View.AddScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AccTrade.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddScreen">

    <Grid Background="White">
        <Button x:Name="Open_btn" Content="Open:" HorizontalAlignment="Left" Margin="14,17,0,0" VerticalAlignment="Top" Height="55" Width="77" Click="Button_Click"/>
        <TextBox x:Name="TextBoxFile_btn" HorizontalAlignment="Left" Margin="115,28,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="357" Height="34"/>
        <Image x:Name="img" HorizontalAlignment="Left" Height="100" Margin="609,94,0,0" VerticalAlignment="Top" Width="100"/>
        <ComboBox x:Name="GameBox" HorizontalAlignment="Left" Margin="10,113,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="GameBox_SelectionChanged">
            <ComboBoxItem/>
        </ComboBox>
        <TextBox x:Name="DescribeTb"  HorizontalAlignment="Left" Margin="10,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="305" Height="145"/>
        <TextBox x:Name="PriceTb" HorizontalAlignment="Left" Margin="52,327,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="93" Height="29" FontSize="24"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="552,314,0,0" VerticalAlignment="Top" Height="57" Width="114" Click="Button_Click_1"/>
        <Label Content="Price:" HorizontalAlignment="Left" Margin="10,327,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label Content="Describe:" HorizontalAlignment="Left" Margin="4,135,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label Content="Game:" HorizontalAlignment="Left" Margin="4,84,0,0" VerticalAlignment="Top" FontSize="14"/>

    </Grid>
</Page>
