<Window x:Class="AccTrade.View.AdminView.CreateGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccTrade.View.AdminView"
        mc:Ignorable="d"
        Title="Create" Height="200" Width="200" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="GameName_tb" HorizontalAlignment="Center" Margin="0,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Game Name:" HorizontalAlignment="Left" Margin="37,52,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Add_btn" Content="Add" HorizontalAlignment="Center" Margin="0,130,0,0" VerticalAlignment="Top" Height="35" Width="62" Click="Add_btn_Click"/>

    </Grid>
</Window>
