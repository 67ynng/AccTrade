<Window x:Class="AccTrade.View.AdminView.CreateUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccTrade.View.AdminView"
        mc:Ignorable="d"
        Title="Create" Height="350" Width="250" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="Username_tb" MaxLength="25" HorizontalAlignment="Left" Margin="63,29,0,0" VerticalAlignment="Top" Width="120" PreviewKeyDown="Username_tb_PreviewKeyDown" PreviewTextInput="Username_tb_PreviewTextInput"/>
        <TextBox x:Name="email_tb" MaxLength="50" HorizontalAlignment="Center" Margin="0,74,0,0"  VerticalAlignment="Top" Width="120" PreviewKeyDown="email_tb_PreviewKeyDown" PreviewTextInput="email_tb_PreviewTextInput"/>
        <Button Content="Create" HorizontalAlignment="Left" Margin="87,276,0,0" VerticalAlignment="Top" Click="Button_Click" RenderTransformOrigin="0.23,1.124"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="53,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="53,55,0,0" VerticalAlignment="Top"/>
        <Label Content="Password"  HorizontalAlignment="Left" Margin="53,109,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="Password_tb" MaxLength="25" HorizontalAlignment="Left" Margin="62,127,0,0" VerticalAlignment="Top" Width="120" PreviewKeyDown="Username_tb_PreviewKeyDown"  PreviewTextInput="Username_tb_PreviewTextInput"/>
        <Label Content="PhoneNumber" HorizontalAlignment="Left" Margin="53,153,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="phonenumber_tb" MaxLength="9" HorizontalAlignment="Left" Margin="63,174,0,0" VerticalAlignment="Top" Width="120" PreviewTextInput="PhoneNumber_PreviewTextInput" PreviewKeyDown="phonenumber_tb_PreviewKeyDown_1"/>
        <Label Content="Role" HorizontalAlignment="Left" Margin="53,208,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="Role_cb" HorizontalAlignment="Left" Margin="63,230,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="+48" HorizontalAlignment="Left" Margin="34,174,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.468,0.4"/>

    </Grid>
</Window>
