<Window x:Class="AccTrade.View.AppView.AdminMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccTrade.View.AppView"
        mc:Ignorable="d"
        Title="AdminPanel" Height="450" Width="800"  MinHeight="450" MinWidth="800" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="76"/>
            <ColumnDefinition Width="Auto" MinWidth="70"/>
            <ColumnDefinition Width="654"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF5B0808"/>
                <GradientStop Color="#FFE31212" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="User_btn" Content="Users" HorizontalAlignment="Left" VerticalAlignment="Center" Height="47" Width="70" Click="User_btn_Click" />
        <Button x:Name="Product_btn" Content="Product" HorizontalAlignment="Center" VerticalAlignment="Center" Height="47" Width="70" Grid.Column="1" Click="Product_btn_Click" />
        <Button x:Name="Games_btn" Content="Games" HorizontalAlignment="Left" VerticalAlignment="Center" Height="47" Width="70" Grid.Column="2" Margin="6,0,0,0" Click="Categories_Click" />
        <Frame x:Name="frame" Background="Lime" Grid.Row="1" Grid.ColumnSpan="3" NavigationUIVisibility="Hidden" Source="UserPage.xaml"  />


    </Grid>
</Window>
