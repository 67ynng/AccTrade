<Window x:Class="AccTrade.View.AppView.Admin2FA"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccTrade.View.AppView"
        mc:Ignorable="d"
        Title="Admin2FA" Height="150" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Label Content="Your 2FA code:" HorizontalAlignment="Center" VerticalAlignment="Top" Height="37" Width="152" FontSize="22"/>
        <TextBox x:Name="TestAdmin_tb" HorizontalAlignment="Center" Margin="0,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="Prove_btn" Content="Prove" HorizontalAlignment="Center" Margin="0,74,0,0" VerticalAlignment="Top" Height="31" Width="62" Click="Prove_btn_Click"/>
        <Label Content="Attempts:" HorizontalAlignment="Left" Margin="4,87,0,0" VerticalAlignment="Top"/>
        <Label x:Name="atmpts_lbl" Content="3"  HorizontalAlignment="Left" Margin="59,87,0,0" VerticalAlignment="Top" Foreground="Red">
            <Label.Background>
                <SolidColorBrush Color="White" Opacity="0"/>
            </Label.Background>
        </Label>

    </Grid>
</Window>
